<h2>Edit</h2>

<form action="/movies/{{movie._id}}/edit" method="post">

  <label for="title">Title</label>
  <input type="text" id="title" name="title" value="{{movie.title}}" />

  <label for="genre">Genre</label>
  <input type="text" id="genre" name="genre" value="{{movie.genre}}" />

  <label for="plot">Plot</label>
  <input type="text" id="plot" name="plot" value="{{movie.plot}}" />

  <label for="cast-select">
    Created by:
    <select name="cast">
      <option disable selected value=""></option>
      {{#each celebrities}}
        <option value="{{this._id}}"> {{this.name}} </option>
      {{/each}}
    </select>
  </label>
  <button type="submit">Edit</button>
</form>